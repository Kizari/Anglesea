<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.MainActivity"
    android:background="@color/colorSecondary"
    android:orientation="vertical">

    <View
        android:id="@+id/topBar"
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:background="@color/colorPrimaryDark" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <Button
                android:onClick="startRoomListActivity"
                android:text="RoomListActivity" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/generic_button_background"
                android:onClick="startAddDrug"
                android:text="AddDrug"
                android:textColor="@color/colorPrimary" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/generic_button_background"
                android:onClick="startDrugListScreen"
                android:text="DrugListScreen"
                android:textColor="@color/colorPrimary" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/generic_button_background"
                android:onClick="startNurseLogin"
                android:text="NurseLoginActivity"
                android:textColor="@color/colorPrimary" />

            <Button
                android:id="@+id/button"
                android:layout_width="173dp"
                android:layout_height="wrap_content"
                android:background="@drawable/generic_button_background"
                android:onClick="startNurseReg"
                android:text="NurseRegActivity"
                android:textColor="@color/colorPrimary" />

            <Button
                android:layout_width="173dp"
                android:layout_height="wrap_content"
                android:background="@drawable/generic_button_background"
                android:onClick="startPatientSummary"
                android:text="PatientSummary"
                android:textColor="@color/colorPrimary" />
        </LinearLayout>

    </ScrollView>

</LinearLayout>