<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.MainActivity"
    android:background="@color/colorSecondary"
    android:orientation="vertical">

    <View
        android:id="@+id/topBar"
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:background="@color/colorPrimaryDark" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <Button
                android:onClick="startRoomListActivity"
                android:text="Room List Activity"
                style="@style/GenericButton" />

            <Button
                style="@style/GenericButton"
                android:onClick="startAddDrug"
                android:text="Add Drug Activity" />

            <Button
                style="@style/GenericButton"
                android:onClick="startDrugListScreen"
                android:text="Drug List Activity" />

            <Button
                style="@style/GenericButton"
                android:onClick="startNurseLogin"
                android:text="Nurse Login Activity" />

            <Button
                style="@style/GenericButton"
                android:onClick="startNurseReg"
                android:text="Nurse Reg Activity" />

            <Button
                style="@style/GenericButton"
                android:onClick="startPatientSummary"
                android:text="Patient Summary Activity" />
        </LinearLayout>

    </ScrollView>

</LinearLayout>