<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.MainActivity"
    android:background="@color/colorSecondary"
    android:orientation="vertical">

    <View
        android:id="@+id/topBar"
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:background="@color/colorPrimaryDark" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="RoomListActivity"
                android:onClick="startRoomListActivity" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="AddDrug"
                android:onClick="startAddDrug" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DrugListScreen"
                android:onClick="startDrugListScreen" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="NurseLoginActivity"
                android:onClick="startNurseLogin"/>

        </LinearLayout>

    </ScrollView>

</LinearLayout>