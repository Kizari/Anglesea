<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.CriticalDrugActivity">

    <Button
        android:id="@+id/confirmButton"
        android:layout_width="198dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="29dp"
        android:text="CONFIRM" />

    <View
        android:id="@+id/signatureUnderline"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_above="@+id/confirmButton"
        android:layout_marginBottom="5dp"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:background="@color/colorPrimaryDark" />

    <TextView
        android:id="@+id/textNurseSignature"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="178dp"
        android:text="Nurse Signature:" />

    <TextView
        android:id="@+id/criticalDrugTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="Critical drug confirmation"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/messageTextView"
        android:layout_width="292dp"
        android:layout_height="49dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="87dp"
        android:text="This is a reconfirmation that you have reviewed and approved the following drugs." />

    <TextView
        android:id="@+id/morphineTextView"
        android:layout_width="293dp"
        android:layout_height="39dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="215dp"
        android:text="Morphine Syrup/Elixir Strength (100mgrms"
        android:textColor="#FF0000"
        android:textColorLink="#FF0000"
        android:textSize="14sp" />

</RelativeLayout>