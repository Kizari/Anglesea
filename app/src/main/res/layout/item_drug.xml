<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/layout"
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:paddingLeft="10dp"
    android:paddingRight="0dp"
    android:paddingTop="5dp"
    android:paddingBottom="5dp"
    android:gravity="center_vertical">

        <ImageView
            android:id="@+id/imageDangerous"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/icon_warning"
            android:layout_marginRight="10dp"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textName"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="Paracetamol Syrup"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/textStrength"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginRight="20dp"
                    android:gravity="right"
                    android:minHeight="0dp"
                    android:text="250 mg / 50 ml"
                    android:textSize="12sp"/>

            </LinearLayout>

            <TextView
                android:id="@+id/textAdministered"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginRight="20dp"
                android:gravity="center_vertical"
                android:text="Administered 24 Jun 18 8:00am"
                android:textSize="10sp"
                android:layout_marginTop="3dp"/>

        </LinearLayout>


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/icon_chevron"
        android:gravity="center_vertical"
        android:layout_margin="10dp"
        android:backgroundTint="#aaa" />

</LinearLayout>