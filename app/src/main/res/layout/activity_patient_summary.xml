<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.PatientSummaryActivity">

    <Button
        android:id="@+id/closeButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="40dp"
        android:text="Close" />

    <TextView
        android:id="@+id/patientSummaryTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="29dp"
        android:text="Patient detail Summary" />

    <TextView
        android:id="@+id/fullNameTextView"
        android:layout_width="330dp"
        android:layout_height="42dp"
        android:layout_below="@+id/patientSummaryTextView"
        android:layout_centerHorizontal="true"
        android:text="Name" />

    <TextView
        android:id="@+id/nhiNoTextView"
        android:layout_width="73dp"
        android:layout_height="44dp"
        android:layout_alignBottom="@+id/nhiEditText"
        android:layout_toStartOf="@+id/patientSummaryTextView"
        android:text="NHI NO:" />

    <EditText
        android:id="@+id/nhiEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fullNameTextView"
        android:layout_toEndOf="@+id/roomTextView"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Name" />

    <TextView
        android:id="@+id/roomTextView"
        android:layout_width="76dp"
        android:layout_height="37dp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/nhiNoTextView"
        android:layout_marginTop="174dp"
        android:text="ROOM NO:" />

    <EditText
        android:id="@+id/roomEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/roomTextView"
        android:layout_toEndOf="@+id/roomTextView"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Name" />

    <TextView
        android:id="@+id/adminDrugTextView"
        android:layout_width="308dp"
        android:layout_height="38dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_marginEnd="16dp"
        android:text="Administered Drugs" />
</RelativeLayout>